{
  "name": "validate.js-express",
  "version": "0.1.4",
  "description": "Simple Express middleware for validate.js.",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run compile",
    "test": "mocha test/unit/*",
    "test-integ": "mocha test/integ/*",
    "clean": "rm -f index.js",
    "precompile": "npm run clean",
    "compile": "babel src -o index.js",
    "docs:generate": "documentation build --lint -f html -o docs src/index.js",
    "docs:publish": "npm run docs:generate && git add docs && git commit --allow-empty -m 'chore(docs): updated docs'",
    "docs:serve": "nodemon --watch docs --exec \"http-server\" docs",
    "prerelease": "npm run test && npm run docs:publish",
    "release": "standard-version"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwongprice/validate.js-express"
  },
  "dependencies": {
    "lodash": "^4.17.1",
    "moment": "^2.22.2",
    "validate.js": "^0.12.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "documentation": "^4.0.0-beta10",
    "http-server": "^0.9.0",
    "mocha": "^2.5.3",
    "mockery": "^1.7.0",
    "nodemon": "^1.10.2",
    "sinon": "^7.1.1",
    "standard-version": "^2.3.1"
  }
}
